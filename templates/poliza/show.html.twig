{% extends 'base.html.twig' %}

{% block title %}Poliza{% endblock %}

{% block body %}
<div class="container py-1 pt-3">
    <h1>Poliza</h1>

    <table class="table table-striped mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poliza.id }}</td>
            </tr>
            <tr>
                <th>Referencia</th>
                <td>{{ poliza.referencia }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ poliza.tipo }}</td>
            </tr>
            <tr>
                <th>Aseguradora</th>
                <td>{{ poliza.aseguradora }}</td>
            </tr>
            <tr>
                <th>Asegurado</th>
                <td>{{ poliza.asegurado }}</td>
            </tr>
            <tr>
                <th>Inmueble</th>
                <td>{{ poliza.inmueble }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark py-1" href="{{ path('app_poliza_index') }}">Volver al Listado</a>

    <a class="btn btn-outline-dark py-1" href="{{ path('app_poliza_edit', {'id': poliza.id}) }}">Edit</a>

    {{ include('poliza/_delete_form.html.twig') }}
</div>
{% endblock %}
